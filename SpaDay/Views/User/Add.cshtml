@using SpaDay.ViewModel;
@model AddUserViewModel



<h1>Sign Up Form</h1>


<form method="post" asp-controller="User" asp-action="Add">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username" value="@Model.Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" type="email" asp-for="Email" value="@Model.Email" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">Confirm Password</label>
        <input class="form-control" type="password" asp-for="VerifyPassword" />
        <span asp-validation-for="VerifyPassword"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-warning" type='submit' value='Submit'>
    </div>   
</form>


